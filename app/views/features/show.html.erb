<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @feature.title %>
</p>

<p>
  <strong>Descripion:</strong>
  <%= @feature.descripion %>
</p>

<p>
  <strong>Project:</strong>
  <%= @feature.project.title %>
</p>

<table class="table">
  <thead>
    <td>ID</td>
    <td>Description</td>
  </thead>
  <tbody>
<% @feature.scenarios.each do |scen| %>
    <tr>
      <td><%= link_to(scen.id, project_feature_scenario_path(@project, @feature, scen)) %></td>
      <td><%= scen.description %></td>
    </tr>
<% end %>
  </tbody>
</table>


<%= link_to 'New Scenario!', new_project_feature_scenario_path(@project, @feature) %> |
<%= link_to 'Edit', edit_project_feature_path(@project, @feature) %> |
<%= link_to 'Back', project_path(@project) %>
